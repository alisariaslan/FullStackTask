// Gateways.Yarp.appsettings.json
{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },

    "Serilog": {
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "Seq",
                "Args": { "serverUrl": "http://localhost:5341" }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Properties": {
            "Application": "Gateway"
        }
    },
    "ReverseProxy": {
        "Routes": {
            "auth-route": {
                "ClusterId": "auth-cluster",
                "RateLimiterPolicy": "fixed",
                "Match": {
                    "Path": "/api/auth/{**catch-all}"
                }
            },
            "product-route": {
                "ClusterId": "product-cluster",
                "RateLimiterPolicy": "fixed",
                "Match": {
                    "Path": "/api/products/{**catch-all}"
                }
            },
            "category-route": {
                "ClusterId": "product-cluster",
                "RateLimiterPolicy": "fixed",
                "Match": {
                    "Path": "/api/categories/{**catch-all}"
                }
            },
            "log-route": {
                "ClusterId": "log-cluster",
                "RateLimiterPolicy": "fixed",
                "Match": {
                    "Path": "/api/logs/{**catch-all}"
                }
            },
            "image-route": {
                "ClusterId": "product-cluster",
                "Match": {
                    "Path": "/images/{**remainder}"
                }
            }
        },
        "Clusters": {
            "auth-cluster": {
                "Destinations": {
                    "d1": {
                        "Address": "http://auth-api:8080"
                    }
                }
            },
            "product-cluster": {
                "Destinations": {
                    "d1": {
                        "Address": "http://product-api:8080"
                    }
                }
            },
            "log-cluster": {
                "Destinations": {
                    "d1": { "Address": "http://log-api:8080" }
                }
            }
        }
    }
}
